        <!--  We define '{Binding IsBusy} in the code-behind  -->
        <VerticalStackLayout Padding="10">
            <ActivityIndicator
                x:Name="activityIndicator1"
                HorizontalOptions="Center"
                IsRunning="{Binding IsBusy}"
                VerticalOptions="Center"
                Color="Orange" />
        </VerticalStackLayout>

        <VerticalStackLayout
            Padding="20"
            Spacing="2"
            VerticalOptions="CenterAndExpand">
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="Username"
                TextColor="#555" />
            <Entry
                FontSize="20"
                Keyboard="Text"
                Placeholder="Enter your username"
                PlaceholderColor="#CCC"
                TextColor="#555" />

            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="PIN"
                TextColor="#555" />
            <Entry
                FontSize="20"
                IsPassword="True"
                Keyboard="Numeric"
                Placeholder="Enter your PIN"
                PlaceholderColor="#CCC"
                TextColor="#555" />
        </VerticalStackLayout>
        <VerticalStackLayout
            Padding="10"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Center">
            <Button
                x:Name="BtnLogin"
                BackgroundColor="Black"
                FontSize="Large"
                Text="Login" />
        </VerticalStackLayout>
    </VerticalStackLayout>
