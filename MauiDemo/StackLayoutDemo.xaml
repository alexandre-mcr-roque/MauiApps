<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiDemo.StackLayoutDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StackLayoutDemo">

    <VerticalStackLayout>
        <HorizontalStackLayout VerticalOptions="Start">
            <Label Text="Name" />
            <Entry HeightRequest="30" WidthRequest="150" />
            <Label Text="Insert your name" TextColor="Red" />
        </HorizontalStackLayout>
        <HorizontalStackLayout VerticalOptions="Start">
            <Label Text="Age" />
            <Entry HeightRequest="30" WidthRequest="150" />
            <Label Text="Insert your Age" TextColor="Red" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>