<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    x:Class="MauiDemo.TabbedPageDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="TabbedPageDemo"
    BarBackgroundColor="AliceBlue"
    BarTextColor="Black"
    SelectedTabColor="BurlyWood"
    UnselectedTabColor="Aquamarine">

    <ContentPage
        Title="Page 1"
        BackgroundColor="BlanchedAlmond"
        IconImageSource="home.svg">

        <Label
            FontSize="Large"
            HorizontalTextAlignment="Center"
            Text="Page 1"
            VerticalTextAlignment="Center" />
    </ContentPage>
    <ContentPage
        Title="Page 2"
        BackgroundColor="CadetBlue"
        IconImageSource="star.svg">

        <Label
            FontSize="Large"
            HorizontalTextAlignment="Center"
            Text="Page 2"
            VerticalTextAlignment="Center" />
    </ContentPage>
    <ContentPage
        Title="Page 3"
        BackgroundColor="Yellow"
        IconImageSource="envelope.svg">

        <Label
            FontSize="Large"
            HorizontalTextAlignment="Center"
            Text="Page 3"
            VerticalTextAlignment="Center" />
    </ContentPage>
    <ContentPage Title="Page 4" IconImageSource="bookmark.svg">
        <Label
            FontSize="Large"
            HorizontalTextAlignment="Center"
            Text="Page 4"
            VerticalTextAlignment="Center" />
    </ContentPage>
</TabbedPage>